{
  "name": "auto-sanitize",
  "version": "1.0.0",
  "description": "Express middleware to auto-sanitize incoming requests.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/index.cjs"
  },
  "keywords": [
    "sanitize",
    "express",
    "middleware",
    "typescript",
    "security"
  ],
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "author": "Osama Alsrraj",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "tsup": "^7.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "express": "^5.1.0"
  }
}
